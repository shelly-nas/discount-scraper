{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "name",
    "url",
    "webIdentifiers"
  ],
  "properties": {
    "name": {
      "type": "string"
    },
    "url": {
      "type": "string",
      "format": "uri"
    },
    "webIdentifiers": {
      "type": "object",
      "required": [
        "cookieDecline",
        "promotionExpireDate",
        "productCategories",
        "products",
        "promotionProducts"
      ],
      "properties": {
        "cookieDecline": {
          "type": "string"
        },
        "promotionExpireDate": {
          "type": "string"
        },
        "productCategories": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "products": {
          "type": "string"
        },
        "promotionProducts": {
          "type": "object",
          "required": [
            "productName",
            "initialPrice",
            "discountPrice",
            "specialDiscount"
          ],
          "properties": {
            "productName": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "initialPrice": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "discountPrice": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "specialDiscount": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}